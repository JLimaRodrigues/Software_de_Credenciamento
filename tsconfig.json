{
    "compilerOptions": {
      "target": "ES2020",                        
      "module": "commonjs",                       
      "lib": ["dom", "es2020"],                   
      "allowJs": true,                           
      "jsx": "react",                             
      "outDir": "./dist",                         
      "rootDir": "./src",                         
      "strict": true,                             
      "moduleResolution": "node",                 
      "esModuleInterop": true,                    
      "skipLibCheck": true,                       
      "forceConsistentCasingInFileNames": true    
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }